@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = null;
    var title = ViewData["Title"] ?? "Dashboard";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@title - School.Presentation</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/vendor/fontawesome-free/css/all.min.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.min.css" asp-append-version="true" />

    <!-- SB Admin 2 -->
    <link rel="stylesheet" href="~/css/sb-admin-2.min.css" asp-append-version="true" />

    <!-- Site Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        @* ✅ Check if user is logged in *@
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            @* ✅ If Instructor: Show Sidebar Dashboard *@
            if (User.IsInRole("INSTRUCTOR"))
            {
                <!-- Sidebar -->
                <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

                    <!-- Sidebar - Brand -->
                    <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Home" asp-action="Index">
                        <div class="sidebar-brand-icon rotate-n-15">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="sidebar-brand-text mx-3">Instructor Dashboard</div>
                    </a>

                    <hr class="sidebar-divider my-0" />

                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <hr class="sidebar-divider" />

                    <div class="sidebar-heading">Management</div>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Course" asp-action="Index">
                            <i class="fas fa-book-open"></i>
                            <span>Courses</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="Index">
                            <i class="fas fa-user-graduate"></i>
                            <span>Students</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Department" asp-action="Index">
                            <i class="fas fa-building"></i>
                            <span>Departments</span>
                        </a>
                    </li>

                    <hr class="sidebar-divider d-none d-md-block" />

                    <!-- Logout -->
                    <li class="nav-item text-center mt-3">
                        <form asp-controller="Account" asp-action="SignOut" method="get" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
                <!-- End of Sidebar -->
            }
            else if (User.IsInRole("STUDENT"))
            {
                @* ✅ If Student: Show Top Navbar *@
                <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
                    <div class="container-fluid">
                        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Student Portal</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Course" asp-action="Index">My Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Department" asp-action="Index">Departments</a>
                                </li>
                            </ul>

                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex">
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        </div>
                    </div>
                </nav>
            }
        }

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <div class="container-fluid mt-4">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white mt-auto">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>&copy; @DateTime.Now.Year - School.Presentation</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js" asp-append-version="true"></script>
    <script src="~/js/sb-admin-2.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
