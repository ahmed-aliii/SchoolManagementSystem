
@model CreateInstructorVM

@{
    ViewData["Title"] = "Create Instructor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus me-2"></i> Create New Instructor
                    </h4>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>

                <div class="card-body px-5 py-4">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

                        <!-- Name -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light" style="width:50px;">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="Name" class="form-control" placeholder="Full Name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Address -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light" style="width:50px;">
                                    <i class="bi bi-geo-alt"></i>
                                </span>
                                <input asp-for="Address" class="form-control" placeholder="Address" />
                            </div>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <!-- Age -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light" style="width:50px;">
                                    <i class="bi bi-calendar"></i>
                                </span>
                                <input asp-for="Age" class="form-control" type="number" min="18" max="100" placeholder="Age" />
                            </div>
                            <span asp-validation-for="Age" class="text-danger small"></span>
                        </div>

                        <!-- Salary -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light" style="width:50px;">
                                    <i class="bi bi-cash"></i>
                                </span>
                                <input asp-for="Salary" class="form-control" type="number" step="0.01" placeholder="Salary (EGP)" />
                            </div>
                            <span asp-validation-for="Salary" class="text-danger small"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light" style="width:50px;">
                                    <i class="bi bi-image"></i>
                                </span>
                                <input asp-for="ImageURL" class="form-control" placeholder="Image URL or filename (e.g., avatar.png)" />
                            </div>
                            <span asp-validation-for="ImageURL" class="text-danger small"></span>
                        </div>

                        <!-- Hire Date -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light" style="width:50px;">
                                    <i class="bi bi-calendar-event"></i>
                                </span>
                                <input asp-for="HireDate" class="form-control" type="date" min="1950-01-01" />
                            </div>
                            <span asp-validation-for="HireDate" class="text-danger small"></span>
                        </div>

                        <!-- Department -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-light" style="width:50px;">
                                    <i class="bi bi-building"></i>
                                </span>
                                <select asp-for="DepartmentId"
                                        asp-items="@(new SelectList(Model.Departments, "Id", "Name"))"
                                        class="form-select">
                                    <option value="">Select Department</option>
                                </select>
                            </div>
                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary px-4 me-2">
                                <i class="bi bi-check-circle"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
