@model School.Domain.Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">
            <!-- Left Side: Instructor Image -->
            <div class="col-md-4 bg-light d-flex flex-column align-items-center justify-content-center p-4 border-end">
                <img src="~/images/@Model.ImageURL"
                     alt="@Model.Name"
                     class="rounded-circle shadow-sm mb-3"
                     style="width:180px; height:180px; object-fit:cover;">
                <h4 class="fw-bold text-primary">@Model.Name</h4>
                <p class="text-muted mb-0">@Model.Department?.Name Department</p>
            </div>

            <!-- Right Side: Instructor Information -->
            <div class="col-md-8 p-5">
                <h4 class="mb-4 fw-semibold text-secondary">
                    <i class="bi bi-person-badge me-2 text-primary"></i> Instructor Information
                </h4>

                <div class="row mb-3">
                    <div class="col-sm-4 text-muted fw-semibold">Address:</div>
                    <div class="col-sm-8">@Model.Address</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 text-muted fw-semibold">Age:</div>
                    <div class="col-sm-8">@Model.Age</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 text-muted fw-semibold">Salary:</div>
                    <div class="col-sm-8">@Model.Salary.ToString("C")</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 text-muted fw-semibold">Hire Date:</div>
                    <div class="col-sm-8">@Model.HireDate.ToString("yyyy-MM-dd")</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 text-muted fw-semibold">Department:</div>
                    <div class="col-sm-8">@Model.Department?.Name</div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Update" asp-controller="Instructor" asp-route-id="@Model.Id"
                       class="btn btn-warning me-2 text-white px-4">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                    </a>
                    <a asp-action="Index" asp-controller="Instructor"
                       class="btn btn-outline-secondary me-2 px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back
                    </a>
                    <a asp-action="Delete" asp-controller="Instructor" asp-route-id="@Model.Id"
                       class="btn btn-danger px-4">
                        <i class="bi bi-trash me-1"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
