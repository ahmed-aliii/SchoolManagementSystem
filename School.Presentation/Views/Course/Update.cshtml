@model UpdateCourseVM

@{
    ViewData["Title"] = "Update Course";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil"></i> Update Course</h4>
        </div>

        <div class="card-body">
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Topic" class="form-label"></label>
                    <input asp-for="Topic" class="form-control" />
                    <span asp-validation-for="Topic" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Degree" class="form-label"></label>
                    <input asp-for="Degree" class="form-control" type="number" />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MinDegree" class="form-label"></label>
                    <input asp-for="MinDegree" class="form-control" type="number" />
                    <span asp-validation-for="MinDegree" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-warning text-dark">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
