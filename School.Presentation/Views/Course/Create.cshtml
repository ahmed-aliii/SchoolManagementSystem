@model CreateCourseVM

@{
    ViewData["Title"] = "Create Course";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Course</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Topic" class="form-label"></label>
                    <input asp-for="Topic" class="form-control" />
                    <span asp-validation-for="Topic" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Degree" class="form-label"></label>
                    <input asp-for="Degree" class="form-control" type="number" />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MinDegree" class="form-label"></label>
                    <input asp-for="MinDegree" class="form-control" type="number" />
                    <span asp-validation-for="MinDegree" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
