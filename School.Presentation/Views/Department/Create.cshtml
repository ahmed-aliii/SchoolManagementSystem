@model CreateDepartmentVM

@{
    ViewData["Title"] = "Create Department";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create New Department</h3>
        </div>
        <div class="card-body">
            <form action="Create" method="post">

                <!-- Validation Summary -->
                <div class="text-danger mb-3">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        }
                    }
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" placeholder="Name" />
                            <label for="Name">Department Name</label>
                            <span class="text-danger">
                                @ViewData.ModelState["Name"]?.Errors.FirstOrDefault()?.ErrorMessage
                            </span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" id="Manager" name="Manager" class="form-control" value="@Model.Manager" placeholder="Manager" />
                            <label for="Manager">Manager</label>
                            <span class="text-danger">
                                @ViewData.ModelState["Manager"]?.Errors.FirstOrDefault()?.ErrorMessage
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input type="text" id="Location" name="Location" class="form-control" value="@Model.Location" placeholder="Location" />
                            <label for="Location">Location</label>
                            <span class="text-danger">
                                @ViewData.ModelState["Location"]?.Errors.FirstOrDefault()?.ErrorMessage
                            </span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success me-2">Create Department</button>
                    <a href="/Department/Index" class="btn btn-secondary">Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>
