@model UpdateStudentVM

@{
    ViewData["Title"] = "Update Student";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h3 class="mb-0 fw-bold">Update Student</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Update" asp-controller="Student" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Name" class="form-control" placeholder="Student Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <label asp-for="Name">Full Name</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <label asp-for="Email">Email Address</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Age" class="form-control" placeholder="Enter Age" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                            <label asp-for="Age">Age</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="ImageURL" class="form-control" placeholder="Image URL (e.g., avatar.png)" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                            <label asp-for="ImageURL">Image URL</label>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Address" class="form-control" placeholder="Enter full address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                            <label asp-for="Address">Address</label>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <select asp-for="DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-select">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            <label asp-for="DepartmentId">Department</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-success btn-lg px-5 me-3 rounded-pill shadow-sm">
                        <i class="bi bi-save me-2"></i>Update
                    </button>
                    <a asp-action="Index" asp-controller="Student" class="btn btn-secondary btn-lg px-5 rounded-pill shadow-sm">
                        <i class="bi bi-arrow-left-circle me-2"></i>Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
