@using School.Domain
@model List<Student>

<div class="container mt-4">
    <h2 class="mb-4">Students List</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Avatar</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int count = 1;
                    foreach (var student in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>
                                <img src="~/images/avatar.png" alt="@student.Name" class="rounded-circle" style="width:50px; height:50px; object-fit:cover;">
                            </td>
                            <td>@student.Name</td>
                            <td>@student.Email</td>
                            <td>@student.Age</td>
                            <td>@student.Address</td>
                            <td>
                                <a href="#" class="btn btn-sm btn-primary me-1">View</a>
                                <a href="#" class="btn btn-sm btn-warning me-1">Edit</a>
                                <a href="#" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">No students found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
