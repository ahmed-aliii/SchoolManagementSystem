@using School.Domain
@model List<Student>

@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Students List</h3>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Add Student
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Avatar</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Age</th>
                            <th>Address</th>
                            <th>Actions</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            foreach (var student in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>
                                        <img src="~/images/avatar.png"
                                             alt="@student.Name"
                                             class="rounded-circle border"
                                             style="width:50px; height:50px; object-fit:cover;">
                                    </td>
                                    <td>@student.Name</td>
                                    <td>@student.Email</td>
                                    <td>@student.Age</td>
                                    <td>@student.Address</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@student.Id"
                                           class="btn btn-sm btn-info text-white me-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>

                                        <a asp-action="Update" asp-route-id="@student.Id"
                                           class="btn btn-sm btn-warning text-white me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@student.Id"
                                           class="btn btn-sm btn-danger text-white me-1">
                                            <i class="bi bi-pencil-square"></i> Delete
                                        </a>

                                       
                                    </td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No students found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
