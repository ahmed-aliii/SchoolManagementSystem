@model List<Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-mortarboard-fill me-2"></i> Students
            </h3>
            <a asp-action="Create" asp-controller="Student" class="btn btn-light fw-semibold shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Add New Student
            </a>
        </div>

        <div class="card-body p-4">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-primary">
                            <tr class="text-uppercase fw-semibold small">
                                <th>#</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Age</th>
                                <th>Address</th>
                                <th>Department</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 1;
                            }
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>
                                        <img src="~/images/@(string.IsNullOrEmpty(student.ImageURL) ? "avatar.png" : student.ImageURL)"
                                             alt="@student.Name"
                                             class="rounded-circle border border-2 border-light shadow-sm"
                                             style="width:60px; height:60px; object-fit:cover;">
                                    </td>
                                    <td class="fw-semibold text-dark">@student.Name</td>
                                    <td>@student.Email</td>
                                    <td>@student.Age</td>
                                    <td>@student.Address</td>
                                    <td>@student.Department?.Name</td>
                                    <td>
                                        <div class="d-flex justify-content-center align-items-center">
                                            <a asp-action="Details" asp-controller="Student" asp-route-id="@student.Id"
                                               class="btn btn-outline-info btn-sm rounded-pill me-1 px-3 shadow-sm"
                                               title="View Details">
                                                Details
                                            </a>
                                            <a asp-action="Update" asp-controller="Student" asp-route-id="@student.Id"
                                               class="btn btn-outline-warning btn-sm rounded-pill me-1 px-3 shadow-sm text-dark"
                                               title="Edit Student">
                                                Edit
                                            </a>
                                            <a asp-action="Delete" asp-controller="Student" asp-route-id="@student.Id"
                                               class="btn btn-outline-danger btn-sm rounded-pill px-3 shadow-sm"
                                               title="Delete Student">
                                                Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center rounded-3 shadow-sm mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    No students found.
                </div>
            }
        </div>
    </div>
</div>
