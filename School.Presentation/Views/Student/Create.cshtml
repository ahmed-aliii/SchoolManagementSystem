@using School.Presentation.ViewModels.Student
@model CreateStudentVM

@{
    ViewData["Title"] = "Create Student";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create New Student</h3>
        </div>
        <div class="card-body">
            <form action="Create" method="post">

                <!-- Validation Summary -->
                <div class="text-danger mb-3">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        }
                    }
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" placeholder="Name" />
                            <label for="Name">Full Name</label>
                            <span class="text-danger">
                                @ViewData.ModelState["Name"]?.Errors.FirstOrDefault()?.ErrorMessage
                            </span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" placeholder="Email" />
                            <label for="Email">Email Address</label>
                            <span class="text-danger">
                                @ViewData.ModelState["Email"]?.Errors.FirstOrDefault()?.ErrorMessage
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input type="number" id="Age" name="Age" class="form-control" min="16" max="100" value="@Model.Age" placeholder="Age" />
                            <label for="Age">Age</label>
                            <span class="text-danger">
                                @ViewData.ModelState["Age"]?.Errors.FirstOrDefault()?.ErrorMessage
                            </span>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="form-floating">
                            <input type="text" id="Address" name="Address" class="form-control" value="@Model.Address" placeholder="Address" />
                            <label for="Address">Address</label>
                            <span class="text-danger">
                                @ViewData.ModelState["Address"]?.Errors.FirstOrDefault()?.ErrorMessage
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="DepartmentId" class="form-label">Department</label>
                        <select id="DepartmentId" name="DepartmentId" class="form-select mb-2">
                            <option value="">-- Select Department --</option>
                            @foreach (var dept in Model.Departments)
                            {
                                if (dept.Id == Model.DepartmentId)
                                {
                                    <option value="@dept.Id" selected>@dept.Name</option>
                                }
                                else
                                {
                                    <option value="@dept.Id">@dept.Name</option>
                                }
                            }
                        </select>
                        <span class="text-danger">
                            @ViewData.ModelState["DepartmentId"]?.Errors.FirstOrDefault()?.ErrorMessage
                        </span>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" id="ImageURL" name="ImageURL" class="form-control" value="@Model.ImageURL" placeholder="Image URL" />
                            <label for="ImageURL">Image URL</label>
                            <span class="text-danger">
                                @ViewData.ModelState["ImageURL"]?.Errors.FirstOrDefault()?.ErrorMessage
                            </span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success me-2">Create Student</button>
                    <a href="/Student/Index" class="btn btn-secondary">Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>
